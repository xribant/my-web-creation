{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
    <!-- Contact -->
    <div id="contact" class="form-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="h2-heading">Contact</h2>
                    <ul class="list-unstyled li-space-lg">
                        <li><i class="fas fa-phone"></i> &nbsp;<a href="tel:0471952308">+32 471 95 23 08</a></li>
                        <li><i class="fas fa-envelope"></i> &nbsp;<a href="mailto:info@mywebcreation.be">info@mywebcreation.be</a></li>
                    </ul>
                </div> <!-- end of col -->
            </div> <!-- end of row -->
            <div class="row">
                <div class="col-lg-10 offset-lg-1">

                    <!-- Contact Form -->
                    {{ form_start(contactForm, {'attr': {'novalidate': 'novalidate'}}) }}
                    {{ form_row(contactForm._token) }}
                    <form>
                        <div class="form-group">
                            {{ form_row(contactForm.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(contactForm.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(contactForm.subject) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(contactForm.message) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(contactForm.captcha) }}
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control-submit-button">Envoyer</button>
                        </div>
                    </form>
                    {{ form_end(contactForm) }}
                    <!-- end of contact form -->

                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </div> <!-- end of form-1 -->
    <!-- end of contact -->
{% endblock %}
